# Environment Variables Template
# Copy this file to .env and fill in your values for local development

# Django Settings
SECRET_KEY=your-super-secret-key-here-minimum-50-characters-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Options:
# Development (SQLite) - comment out DATABASE_URL to use SQLite
# DATABASE_URL=

# Development (PostgreSQL) - uncomment and configure for local PostgreSQL
# DATABASE_URL=postgresql://jnj_user:secure_password@localhost:5432/jnj_lens_calculator

# Production (Railway provides this automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Production Security Settings (set to True for HTTPS deployments)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# Johnson & Johnson Vision Care Specific
COMPANY_NAME="Johnson & Johnson Vision Care"
APP_VERSION=1.0.0